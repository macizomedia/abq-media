{
  "name": "@abquanta/abq-media-workspace",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "description": "Monorepo for Abquanta media intelligence pipeline (YouTube -> transcript -> digest -> research prompt -> podcast/video).",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abquanta/abq-media-workspace.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "npm run -ws build",
    "test": "npm run -ws test",
    "lint": "npm run -ws lint",
    "clean": "npm run -ws clean",
    "yt:doctor": "npm run yt:doctor -w @abquanta/pipeline-youtube-research-podcast --",
    "yt:prep": "npm run yt:prep -w @abquanta/pipeline-youtube-research-podcast --",
    "yt:latest": "npm run yt:latest -w @abquanta/pipeline-youtube-research-podcast --",
    "yt:podcast": "npm run yt:podcast -w @abquanta/pipeline-youtube-research-podcast --",
    "yt:publish": "npm run yt:publish -w @abquanta/pipeline-youtube-research-podcast --",
    "tts:render": "npm run tts:render -w @abquanta/adapter-elevenlabs-tts --",
    "tts:doctor": "npm run tts:doctor -w @abquanta/adapter-elevenlabs-tts --",
    "narratome:generate": "npm run narratome:generate -w @abquanta/engine-narratome --",
    "narratome:render": "npm run narratome:render -w @abquanta/engine-narratome --",
    "narratome:run": "npm run narratome:run -w @abquanta/engine-narratome --",
    "narratome:doctor": "npm run narratome:doctor -w @abquanta/engine-narratome --"
  }
}